
import javax.swing.*;
import java.awt.*;
import java.awt.event.*;
import java.util.ArrayList;

public class ArrayListCollectionGUI {

    // Create the list to store colors
    private ArrayList<String> items = new ArrayList<>();

    // GUI Components
    private JFrame frame;
    private JTextField inputField;
    private JTextArea displayArea;
    private JButton addButton;
    private JButton removeButton;
    private JButton displayButton;

    // Constructor to set up the GUI
    public ArrayListCollectionGUI() {
        // Initialize the frame
        frame = new JFrame("Color List Organizer");
        frame.setSize(400, 400);
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        frame.setLayout(new FlowLayout());

        // Input label and field
        JLabel inputLabel = new JLabel("Enter Color: ");
        inputField = new JTextField(15);

        // Text area to display the list
        displayArea = new JTextArea(10, 20);
        displayArea.setEditable(false);  // Disable editing
        JScrollPane scrollPane = new JScrollPane(displayArea);

        // Buttons for user actions
        addButton = new JButton("Add Color");
        removeButton = new JButton("Remove Color");
        displayButton = new JButton("Show List");

        // Add components to the frame
        frame.add(inputLabel);
        frame.add(inputField);
        frame.add(addButton);
        frame.add(removeButton);
        frame.add(displayButton);
        frame.add(scrollPane);

        // Add functionality to buttons
        addButton.addActionListener(e -> addColor());
        removeButton.addActionListener(e -> removeColor());
        displayButton.addActionListener(e -> displayList());

        // Display the frame
        frame.setVisible(true);
    }

    // Add color to the list
    private void addColor() {
        String color = inputField.getText().trim();
        if (!color.isEmpty()) {
            items.add(color);
            inputField.setText("");  // Clear input field
            displayList();  // Refresh the display
        } else {
            JOptionPane.showMessageDialog(frame, "Please enter a color.");
        }
    }

    // Remove color from the list
    private void removeColor() {
        String color = inputField.getText().trim();
        if (!color.isEmpty()) {
            if (items.remove(color)) {
                displayList();  // Refresh the display
            } else {
                JOptionPane.showMessageDialog(frame, "Color not found in the list.");
            }
        } else {
            JOptionPane.showMessageDialog(frame, "Please enter a color.");
        }
        inputField.setText("");  // Clear input field
    }

    // Display the list in the text area
    private void displayList() {
        displayArea.setText("");  // Clear display
        if (items.isEmpty()) {
            displayArea.append("The list is empty.\n");
        } else {
            for (String color : items) {
                displayArea.append(color + "\n");
            }
        }
    }

    // Main method to start the GUI
    public static void main(String[] args) {
        SwingUtilities.invokeLater(ArrayListCollectionGUI::new);
    }
}
